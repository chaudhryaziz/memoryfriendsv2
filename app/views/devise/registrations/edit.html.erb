<div class="container">
  <div class="row">
    <h2>User Settings</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-group" }) do |f| %>
    <div class="col-md-6">
      
      <%= f.error_notification %>

    <div class="form-group">
      <%= f.input :username, required: true, autofocus:true, input_html: {class: "form-control"} %>
      <%= f.input :email, required: true %>
    </div>
    <div class="form-group">
      <%= f.input :age, input_html: {class: "form-control"} %>
      <%= f.input :gender,collection: ["Male","Female","Other"], input_html: {class: "form-control"} %>
      <%= f.input :bio, input_html: {class: "form-control"} %>
    </div>

    <%= link_to "http://www.gravatar.com", target: "_blank" do %> 
    <%= gravatar_tag current_user.email , size:100 %> 
    <% end %>

    <small> Click Image to Change </small>
  </div>


<div class="col-md-6">
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <div class="form-group">
      <%= f.input :password, autocomplete: "off", hint: "You can leave this field blank if you don't want to change your password", required: false %>
      <%= f.input :password_confirmation, required: false %>
      <%= f.input :current_password, hint: "We need your current password to confirm your changes", required: true %>
    </div>

  <div class=" form-group">
    <%= f.button :submit, "Update", class: "btn btn-primary btn-block" %>

  </div>
  </div>
<% end %>

<div class="col-md-6">
<h3>Cancel my account</h3>

<p>Want to Escape? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure you want to destroy all your memories? This is permanent." }, method: :delete %></p>

<%= link_to "Back", :back %>
</div>
</div>
</div>
