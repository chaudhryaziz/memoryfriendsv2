<style>
body {
  background-color: #DBDDFF;
}
</style>

<div id="login">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
      <h2 style="text-align: center;">Sign In</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
        <%= f.error_notification %>

        <div class="form-group">
          <%= f.input :email, required: true, label: false, placeholder: "E-mail", input_html: {class: "form-control"} %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: false, placeholder: "Password", input_html: {class: "form-control"} %>
        </div>

        <div class="form-group">
          <%= f.button :submit, "Sign In", class: "btn btn-primary btn-block" %>
        </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>