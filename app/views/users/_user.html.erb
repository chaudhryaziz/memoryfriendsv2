<div class="col-md-3 animated flipInX">
	<div class="thumbnail" style="-webkit-box-shadow: 0px 3px 12px 0px rgba(0,0,0,0.75);-moz-box-shadow: 0px 3px 12px 0px rgba(0,0,0,0.75);box-shadow: 0px 3px 12px 0px rgba(0,0,0,0.75);">
		<%= link_to user_path(user.username) do %>
			<%= gravatar_tag user.email, size: 200 %>
		<% end %>
		<div class="caption">
			<h3> <%= user.username %></h3>
			<% if current_user %>
			<p><%= action_buttons(user) %></p>
			<% end %>
		</div>
	</div>
</div>